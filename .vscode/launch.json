  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: tmp-compiler",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/tmp-compiler.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": ["${file}", "-d"]
    },
    {
      "name": "Slang Lang VS-code Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/language-server"]
    }
  ]
}
