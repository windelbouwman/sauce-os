{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: tmp-compiler",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/build/tmp-compiler3.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        "${file}",
        "${workspaceFolder}/runtime/std.slang",
        "--backend-bc",
        "--run",
      ]
    },
    {
      "name": "Slang Lang VS-code Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/language-server"
      ]
    }
  ]
}